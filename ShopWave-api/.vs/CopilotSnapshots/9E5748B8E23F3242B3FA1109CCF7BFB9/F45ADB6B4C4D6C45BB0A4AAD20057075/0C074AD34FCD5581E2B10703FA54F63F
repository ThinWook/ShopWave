using Microsoft.AspNetCore.Http;
using ShopWave.Models;
using System.Threading.Tasks;
using System.Collections.Generic;

namespace ShopWave.Services
{
    public interface IMediaService
    {
        Task<Media> UploadFileAsync(IFormFile file, string? category);
        Task<List<Media>> UploadFilesAsync(IEnumerable<IFormFile> files, string? category);
        // Bổ sung phương thức SaveMediaAsync để tương thích với controller
        Task<Media> SaveMediaAsync(IFormFile file)
        {
            // Gọi lại UploadFileAsync với category null
            return UploadFileAsync(file, null);
        }
    }
}
